<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:padding="10dp"
        android:id="@+id/btncancel"
        android:layout_width="wrap_content"
        android:background="#000000"
        android:layout_height="wrap_content"
        android:text=" Serving size 100g " 
       	android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncancel"
        android:layout_marginRight="50dp"
        android:text=" Kcal " 
        android:textColor="#000000"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/kcalserving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncancel"
        android:layout_alignLeft="@+id/kcal"
        android:layout_marginLeft="150dp"
        android:textColor="#000000"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kcal"
        android:layout_marginRight="50dp"
        android:text=" Protein " 
        android:textColor="#000000"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/proteinserving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kcal"
        android:layout_alignLeft="@+id/protein"
        android:layout_marginLeft="150dp"
        android:textColor="#000000"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/protein"
        android:text=" Fat " 
        android:textColor="#000000"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/fatserving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/protein"
        android:layout_alignLeft="@+id/fatserving"
        android:layout_marginLeft="150dp"
        android:textColor="#000000"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/CarboHydrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fat"
        android:text=" CarboHydrate " 
        android:textColor="#000000"/>
   <TextView
        android:padding="10dp"
        android:id="@+id/Ohserving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fat"
        android:layout_alignLeft="@+id/CarboHydrate"
        android:layout_marginLeft="150dp"
        android:textColor="#000000"/>
</RelativeLayout>